rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Приложение записывает/обновляет свой токен и группу.
    // Для продакшена можно ограничить через Auth (например allow write if request.auth != null).
    match /fcm_tokens/{docId} {
      allow read, write: if true;
    }
    // last_replacements только для Cloud Functions (admin SDK), клиент не пишет.
    match /last_replacements/{docId} {
      allow read, write: if false;
    }
  }
}
